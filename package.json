{
  "name": "boxkit",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build:ui": "pnpm --filter=@boxkit/components run build",
    "build:utils": "pnpm --filter=@boxkit/utils run build",
    "build": "pnpm --filter=@boxkit/* run build",
    "clean": "pnpm --parallel --stream clean",
    "release": "pnpm build && pnpm publish",
    "publish": "changeset publish --registry=https://registry.npmjs.com/",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore ."
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@boxkit/components": "workspace:^0.0.1",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.1",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vitejs/plugin-vue": "^3.0.0",
    "eslint": "^8.20.0",
    "eslint-plugin-vue": "^9.2.0",
    "less": "^4.1.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vue-tsc": "^0.38.4"
  }
}