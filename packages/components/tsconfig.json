{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        // 生成的是哪个模块体系代码
        "module": "ESNext",
        // 如何处理模块，解析策略
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"]
        },
        "outDir": "lib",
        // 严格类型检查
        "strict": true,
        "lib": ["ESNext", "DOM"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./lib/types",
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue"
    ]
}